<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create your trail"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:fontFamily="@font/ptserif_bold"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editTrailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Trail Name"
        android:background="@color/white"
        android:fontFamily="@font/ptserif_italic"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editNumberOfPlayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Number of Players"
        android:background="@color/white"
        android:fontFamily="@font/ptserif_italic"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Comments"
        android:inputType="textMultiLine"
        android:background="@color/white"
        android:fontFamily="@font/ptserif_italic"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnConfigureLocations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configure Locations"
        android:textColor="@color/white"
        android:fontFamily="@font/ptserif_regular"/>

    <Button
        android:id="@+id/btnSaveTrail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/ptserif_regular"
        android:textColor="@color/white"
        android:text="Save Trail" />
</LinearLayout>
